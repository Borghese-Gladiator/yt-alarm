            "schema": {
              "$ref": "#/definitions/Video"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "New video is created",
            "schema": {
              "$ref": "#/definitions/Video"
            }
          }
        }
      }
    },
    "/api/videos/{link}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "ID of video that we want to find",
          "type": "integer"
        }
      ],
      "get": {
        "tags": ["Video"],
        "summary": "GET a video",
        "parameters": {
          "name": "link",
          "schema": {
            "type": "integer"
          },
          "required": true,
          "description": "unique youtube link"
        },
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Video"
            }
          }
        }
      },
      "put": {
        "tags": ["Video"],
        "summary": "UPDATE a video",
        "parameters": [
          {
            "name": "video",
            "in": "body",
            "description": "User with new values of properties",
            "schema": {
              "$ref": "#/definitions/updateUser"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Video"
            }
          }
        }
      },
      "delete": {
        "tags": ["Video"],
        "summary": "DELETE a single video",
        "parameters": {
          "name": "link",
          "schema": {
            "type": "integer"
          },
          "required": true,
          "description": "unique youtube link"
        },
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Video"
            }
          }
        }
      }
    }
