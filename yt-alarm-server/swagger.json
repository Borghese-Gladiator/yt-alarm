  "host": "localhost:3000",
  "basePath": "/",
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/api": {
      "get": {
        "tags": ["Video"],
        "summary": "Verify api works",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/videos": {
      "get": {
        "tags": ["Video"],
        "summary": "GET ALL videos",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Video"
            }
          }
        }
      },
      "post": {
        "tags": ["Video"],
        "summary": "CREATE new video",
        "parameters": [
          {
            "name": "video",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/Video"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "schema": {
              "$ref": "#/definitions/Video"
            }
          }
        }
      }
    },
    "/api/videos/{link}": {
      "parameters": [
        {
          "name": "link",
          "in": "path",
          "required": true,
          "type": "string",
          "description": "Unique video link to search for"
        }
      ],
      "get": {
        "tags": ["Video"],
        "summary": "GET a video",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Video"
            }
          }
        }
      },
      "put": {
        "tags": ["Video"],
        "summary": "UPDATE a video",
        "parameters": [
          {
            "name": "video",
            "in": "body",
            "description": "User with new values of properties",
            "schema": {
              "$ref": "#/definitions/Video"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Video"
            }
          }
        }
      },
      "delete": {
        "tags": ["Video"],
        "summary": "DELETE a single video",
        "parameters": {
          "name": "link",
          "schema": {
            "type": "string"
          },
          "required": true,
          "description": "unique youtube link"
        },
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Video"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Video": {
      "required": [
        "link"
      ],
      "properties": {
        "link": {
          "type": "string",
          "uniqueItems": true
        },
        "title": {
          "type": "string"
        },
        "uploader": {
          "type": "string"
        },
        "date": {
          "type": "date",
          "pattern": "/([0-9]{4})-(?:[0-9]{2})-([0-9]{2})/",
          "example": "2019-05-17"
        },
        "duration": {
          "type": "integer"
        },
        "localPath": {
          "type": "string"
        }
      }
    },
    "Videos": {
      "type": "array",
      "$ref": "#/definitions/Video"
    }
  }
